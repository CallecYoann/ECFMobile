<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewRang" />

    <TextView
        android:text="TextView"
        android:layout_width="142dp"
        android:layout_height="40dp"
        android:id="@+id/textViewNomVoilier"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textViewRang"
        android:layout_toEndOf="@+id/textViewRang" />

    <TextView
        android:text="TextView"
        android:layout_width="142dp"
        android:layout_height="40dp"
        android:id="@+id/TextViewTemps"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textViewNomVoilier"
        android:layout_toEndOf="@+id/textViewNomVoilier" />
</RelativeLayout>